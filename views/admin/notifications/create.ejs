<section class="content"  style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Thêm thông báo
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/notifications" class="btn btn-secondary">
                          <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/notifications/create" method="POST">
                <div class="form-group">
                    <label class="control-label col-md-2" for="user_id">Người dùng:</label>
                    <select class="form-control" name="user_id" required>
                        <option value="" disabled selected>Hãy chọn người dùng</option>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>"><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="message">Nội dung thông báo:</label>
                    <textarea class="form-control" value=" Nhập nội dung:a,b,c,... " name="message" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary custom-btn">
                            <i class="fas fa-plus"></i> Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
  </section>
  