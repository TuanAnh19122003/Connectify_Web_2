<section class="content" style="padding-top:30px">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Sửa tin nhắn
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/messages" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/messages/edit/<%= message._id %>" method="POST">
                <div class="form-group">
                    <label class="control-label col-md-2" for="sender_id">Người gửi:</label>
                    <select class="form-control" name="sender_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= message.sender_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="receiver_id">Người nhận:</label>
                    <select class="form-control" name="receiver_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= message.receiver_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="content">Nội dung tin nhắn:</label>
                    <textarea class="form-control" name="content" rows="4" required><%= message.content %></textarea>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
