<section class="content" style="padding-top:30px">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Thêm tin nhắn
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/messages" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/messages/create" method="POST">
                <div class="form-group">
                    <label for="sender_id">Người gửi:</label>
                    <select class="form-control" name="sender_id" required>
                        <option value="" disabled selected>Hãy chọn người gửi tin nhắn</option>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>"><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="receiver_id">Người nhận:</label>
                    <select class="form-control" name="receiver_id" required>
                        <option value="" disabled selected>Hãy chọn người nhận tin nhắn</option>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>"><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="content">Nội dung tin nhắn:</label>
                    <textarea class="form-control" name="content" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
