<section class="content" style="padding-top:30px">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Cập nhật theo dõi
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/follows" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/follows/edit/<%= follow._id %>" method="POST">
                <div class="form-group">
                    <label class="control-label col-md-8" for="follower_id">Người dùng thực hiện theo dõi:</label>
                    <select class="form-control" name="follower_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= follow.follower_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-8" for="following_id">Người dùng được theo dõi:</label>
                    <select class="form-control" name="following_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= follow.following_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
