<section class="content" style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-end text-danger text-uppercase">
                    <div class="d-flex justify-content-start align-items-center text-primary text-uppercase">
                        Chi tiết phân quyền
                    </div>
                </div>
                <div class="col-6 text-right">
                    <a href="/admin/follows/edit/<%= follow._id %>" class="btn btn-warning mr-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="/admin/follows" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-15">
                    <h4 class="text-primary">Thông tin Follow</h4>
                    <dl class="row">
                        <dt class="col-sm-3">
                            Mã theo dõi:
                        </dt>
                        <dd class="col-sm-9">
                            <%= follow._id %>
                        </dd>

                        <dt class="col-sm-3">
                            Người dùng thực hiện theo dõi:
                        </dt>
                        <dd class="col-sm-9">
                            <%= follow.follower_id ? follow.follower_id.username : 'Không xác định' %>
                        </dd>

                        <dt class="col-sm-3">
                            Người dùng được theo dõi:
                        </dt>
                        <dd class="col-sm-9">
                            <%= follow.following_id ? follow.following_id.username : 'Không xác định' %>
                        </dd>

                        <dt class="col-sm-3">
                            Ngày tạo:
                        </dt>
                        <dd class="col-sm-9">
                            <%= formatDate(follow.created_at) %>
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>
