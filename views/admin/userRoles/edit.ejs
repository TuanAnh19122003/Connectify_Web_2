
<section class="content"  style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Cập nhật vai trò
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/userRoles" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/userRoles/edit/<%= userRole._id %>" method="POST">
                <div class="form-group">
                    <label class="control-label col-md-2" for="user_id">Người dùng:</label>
                    <select class="form-control" name="user_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= userRole.user_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="role_id">Vai trò:</label>
                    <select class="form-control" name="role_id" required>
                        <% roles.forEach(function(role) { %>
                            <option value="<%= role._id %>" <%= userRole.role_id.equals(role._id) ? 'selected' : '' %>><%= role.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>