<section class="content" style="padding-top:30px">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Cập nhật bạn bè
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/friendships" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/friendships/edit/<%= friendship._id %>" method="POST">
                <div class="form-group">
                    <label class="control-label col-md-8" for="user_id">Người dùng thực hiện theo dõi:</label>
                    <select class="form-control" name="user_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= friendship.user_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-8" for="friend_id">Người dùng được theo dõi:</label>
                    <select class="form-control" name="friend_id" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>" <%= friendship.friend_id.equals(user._id) ? 'selected' : '' %>><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-8" for="status">Trạng thái:</label>
                    <select class="form-control" name="status" required>
                        <option value="pending" <%= friendship.status === 'pending' ? 'selected' : '' %>>Đang chờ</option>
                        <option value="accepted" <%= friendship.status === 'accepted' ? 'selected' : '' %>>Đã đồng ý</option>
                        <option value="rejected" <%= friendship.status === 'rejected' ? 'selected' : '' %>>Từ chối</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
