<section class="content"  style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Thêm người dùng
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/users" class="btn btn-secondary">
                          <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/users/create" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label  class="control-label col-md-2" for="username">Họ và tên:</label>
                    <input type="text" class="form-control" name="username" required>
                </div>
                <div class="form-group">
                    <label  class="control-label col-md-2" for="email">Email:</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label  class="control-label col-md-2" for="password">Mật khẩu:</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label for="profile_picture">Ảnh sản phẩm:</label>
                    <input type="file" class="form-control-file" name="profile_picture" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="bio">Giới thiệu:</label>
                    <textarea class="form-control" name="bio" rows="4" required></textarea>
                </div>                
                <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary custom-btn">
                                <i class="fas fa-plus"></i> Create
                            </button>
                        </div>
                </div>
            </form>
        </div>
    </div>
  </section>
  