<section class="content" style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-primary text-uppercase">
                        Chi tiết vai trò
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/roles" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-primary">Thông tin vai trò</h4>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Mã phân quyền:</strong> <%= role._id %>
                        </li>
                        <li class="list-group-item">
                            <strong>Tên vai trò:</strong> <%= role.name %>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4 class="text-primary">Hành động</h4>
                    <div class="btn-group" role="group">
                        <a href="/admin/roles/edit/<%= role._id %>" class="btn btn-warning mr-2">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="/admin/roles/delete/<%= role._id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
