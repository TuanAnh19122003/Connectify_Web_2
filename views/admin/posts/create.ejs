<section class="content"  style="padding-top:30px">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex justify-content-start align-items-center text-danger text-uppercase">
                        Tạo bài đăng
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end align-items-center">
                        <a href="/admin/posts" class="btn btn-secondary">
                          <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form action="/admin/posts/create" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="control-label col-md-2" for="username">Người dùng:</label>
                    <select class="form-control" name="username" required>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user._id %>"><%= user.username %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label  class="control-label col-md-2" for="title">Tiêu đề:</label>
                    <input type="text" class="form-control" name="title" required>
                </div>
                <div class="form-group">
                    <label  class="control-label col-md-2" for="content">Nội dung bài đăng:</label>
                    <textarea class="form-control" name="content" required></textarea>
                </div>
                <div class="form-group">
                    <label  class="control-label col-md-2" for="like_count">Số lượt thích:</label>
                    <input type="number" class="form-control" name="like_count" required>
                </div>
                <div class="form-group">
                    <label for="image">Ảnh bài đăng:</label>
                    <input type="file" class="form-control-file" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary custom-btn">
                            <i class="fas fa-plus"></i> Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
  </section>
  