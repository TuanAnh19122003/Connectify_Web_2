<script>
    document.getElementById("postForm").addEventListener("submit", function(event) {
        const form = event.target;
        let isValid = true;

        // Kiểm tra tất cả các trường input và textarea có thuộc tính data-validate
        const fields = form.querySelectorAll("[data-validate]");

        // Xóa tất cả thông báo lỗi cũ trước khi kiểm tra
        const errorMessages = form.querySelectorAll(".error-message");
        errorMessages.forEach(function(message) {
            message.remove();
        });

        fields.forEach(function(field) {
            if (!field.value.trim()) {
                // Tạo phần tử thông báo lỗi
                const errorMessage = document.createElement("div");
                errorMessage.classList.add("error-message");
                errorMessage.style.color = "red"; // Có thể thay đổi màu sắc thông báo theo ý muốn
                errorMessage.textContent = field.getAttribute("data-validate"); // Lấy thông báo từ thuộc tính data-validate
                
                // Chèn thông báo lỗi vào sau trường nhập liệu
                field.insertAdjacentElement("afterend", errorMessage);

                isValid = false;
            }
        });

        // Nếu có trường không hợp lệ, ngừng gửi biểu mẫu
        if (!isValid) {
            event.preventDefault();
        }
    });
    $(document).on('click', '.add-friend', function (e) {
        e.preventDefault();
        const $this = $(this);
        const friendId = $this.data('id');

        console.log('Friend ID:', friendId);

        // Kiểm tra nếu friendId hoặc userId không hợp lệ
        if (!friendId ) {
            alert('Lỗi: friend_id không hợp lệ.');
            return;
        }

        // Gửi yêu cầu kết bạn chỉ với friend_id (user_id sẽ lấy từ session trong server)
        $.post('/user/friends/send-request', { friend_id: friendId })
            .done(function (response) {
                console.log('Request sent successfully:', response);
                $this.text('Request Sent').removeClass('add-friend underline').addClass('disabled');
            })
            .fail(function (xhr, status, error) {
                console.error('Có lỗi xảy ra:', error);
                alert('Có lỗi xảy ra khi gửi yêu cầu kết bạn: ' + xhr.responseText);
            });
    });

    // Lắng nghe sự kiện khi tải trang
    document.addEventListener('DOMContentLoaded', () => {
        fetch('/user/friends/suggestions')
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('friend-suggestions');
                container.innerHTML = '';  // Làm sạch nội dung hiện tại
                data.forEach(friend => {
                    const li = document.createElement('li');
                    li.innerHTML = `
                        <figure><img src="${friend.profile_picture || 'uploads/default.jpg'}" 
                            alt="${friend.username}" 
                            style="width: 100%;height: 42px;">
                        </figure>
                        <div class="friend-meta">
                            <h4><a href="/users/${friend._id}" title="">${friend.username}</a></h4>
                            <a href="javascript:void(0);" class="underline add-friend" 
                                data-id="${friend._id}" title="Gửi yêu cầu kết bạn">
                                Add Friend
                            </a>
                        </div>
                    `;
                    container.appendChild(li);
                });
            })
            .catch(error => {
                console.error('Có lỗi khi tải dữ liệu gợi ý bạn bè:', error);
            });
    });


</script>
